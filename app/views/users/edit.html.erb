                  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
                  <label for="user_introduction">Introduction</label>
                  <%= f.text_area :introduction, class:"form-control introduction",id:"user_introduction" %>
                  <!--<textarea class="form-control introduction" name="user[introduction]" id="user_introduction" value="<"></textarea>-->
                  <%= f.submit "Update User" %>
                <% end %>
