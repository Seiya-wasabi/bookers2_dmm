        <%= flash[:notice] %>
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>User info</h2>
            <% if @user.errors.any? %>
              <%= @user.errors.count %>件のエラーが発生しました
              <% @user.errors.full_messages.each do |message| %>
